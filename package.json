{
  "name": "cbrn_api_tests",
  "version": "1.0.0",
  "description": "aims to execute API level test for DOOB APIs",
  "scripts": {
    "lint": "eslint . --ext .js,ts --no-error-on-unmatched-pattern && echo \"eslint: no lint errors\"",
    "lint:fix": "eslint . --ext .js,ts --fix --no-error-on-unmatched-pattern && echo \"eslint: no lint errors\"",
    "report:generate": "allure generate allure-results -o allure-report --clean",
    "report:open": "allure open",
    "test": "node ./node_modules/mocha/bin/mocha.js --environment=SEL --timeout 20000",
    "test:fake": "npx mocha --require ts-node/register --require tsconfig-paths/register \"fake-api-tests/**/*.ts\" --timeout 20000 -- --environment=FakeAPI",
    "allInOne": "npm run runner --reporter=allure && npm run report:generate && npm run report:open",
    "runner": "ts-node -r tsconfig-paths/register src/conf/runner.ts",
    "socketServer": "ts-node -r tsconfig-paths/register src/conf/widget.ts",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "TMGM",
  "license": "MIT",
  "dependencies": {
    "@stomp/stompjs": "^7.0.0",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.25",
    "@types/selenium-webdriver": "^4.1.15",
    "argv-split": "^2.0.1",
    "async": "^3.2.4",
    "async-queue-stream": "^0.1.3",
    "async-wait-until": "^2.0.12",
    "axios": "^1.7.8",
    "base64url": "^3.0.1",
    "cacheable-lookup": "^5.0.4",
    "chai": "^4.4.1",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "lodash": "^4.17.21",
    "mocha-multi": "^1.1.7",
    "mochawesome": "^7.1.3",
    "moment-timezone": "^0.5.43",
    "puppeteer": "^23.9.0",
    "selenium-webdriver": "^4.10.0",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.7.4",
    "sockjs-client": "^1.6.1",
    "terminal-overwrite": "^2.0.1",
    "tsconfig-paths": "^4.1.1",
    "ws": "^8.14.2",
    "yarn": "^1.22.22"
  },
  "devDependencies": {
    "@types/axios": "^0.14.4",
    "@types/puppeteer": "^7.0.4",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "allure-mocha": "^2.2.1",
    "chromedriver": "^131.0.1",
    "crypto-js": "^4.2.0",
    "eslint": "^8.28.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^9.0.11",
    "mocha": "^10.2.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
